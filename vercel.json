{
  "version": 2,
  "builds": [
    { "src": "public/*.php", "use": "vercel-php" },
    { "src": "public/**/*.php", "use": "vercel-php" },
    { "src": "api/**/*.php", "use": "vercel-php" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
