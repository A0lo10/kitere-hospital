{
  "version": 2,
  "builds": [
    { "src": "api/**/*.php", "use": "vercel-php" },
    { "src": "admin/**/*.php", "use": "vercel-php" },
    { "src": "patient/**/*.php", "use": "vercel-php" },
    { "src": "*.php", "use": "vercel-php" }
  ],
  "routes": [
    { "src": "^/$", "dest": "/api/index.php" },

    { "src": "^/admin/(.*)$", "dest": "/admin/$1" },
    { "src": "^/patient/(.*)$", "dest": "/patient/$1" },

    { "src": "^/(.*)$", "dest": "/$1" }
  ]
}
